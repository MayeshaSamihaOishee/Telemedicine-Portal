<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sasthoseba.com.sasthoseba.fragment.Patient_BasicInfoFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/specialistSmall"
                android:layout_marginTop="25dp"
                android:text="নাম"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/fullnameDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/fullname"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />
            <TextView
                android:id="@+id/birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullnameDetails"
                android:layout_marginTop="10dp"
                android:text="জন্ম তারিখ"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/birthdateDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/birthdate"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthdateDetails"
                android:layout_marginTop="10dp"
                android:text="লিঙ্গ"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/genderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/gender"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genderDetails"
                android:layout_marginTop="10dp"
                android:text="মোবাইল নম্বর"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/mobileDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileDetails"
                android:layout_marginTop="10dp"
                android:text="ই-মেইল"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/emailDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/email"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />
            <TextView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailDetails"
                android:layout_marginTop="10dp"
                android:text="উচ্চতা"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/heightDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/height"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />
            <TextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heightDetails"
                android:layout_marginTop="10dp"
                android:text="ওজন (কেজি)"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/weightDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/weight"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weightDetails"
                android:layout_marginTop="10dp"
                android:text="রক্তের গ্রুপ"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18dp"
                tools:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/bloodgroupDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/bloodgroup"
                android:layout_marginTop="3dp"
                android:text="........."
                android:textSize="16dp" />

            <Button
                android:id="@+id/editprofile"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/bloodgroupDetails"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/holo_green_light"
                android:text="@string/EditBasicInfo"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>